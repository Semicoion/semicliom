<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"></ImageView>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_upload"
            android:layout_alignParentStart="true"
            />

        
        <TextView
            android:id="@+id/txtf1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="نوع الطعام"
            android:visibility="gone"></TextView>
        <EditText
            android:id="@+id/foodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"></EditText>

        <CheckBox
            android:id="@+id/f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وجبة سريعة"
            android:visibility="gone"></CheckBox>
        <CheckBox
            android:id="@+id/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="وجبة منزلية"
            android:visibility="gone"></CheckBox>
        <CheckBox
            android:id="@+id/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اخرى"
            android:visibility="gone"></CheckBox>
    <TextView
        android:id="@+id/txtf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الوجبة تكفي ل"
        android:visibility="gone"></TextView>
    <EditText
        android:id="@+id/NumF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:hint="ادخل عدد الاشخاص"></EditText>


    //...........................................


 <Button
            android:id="@+id/button_choose_image"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="اضافة صورة"
            android:layout_gravity="center"/>

        <Button
        android:id="@+id/addBook"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="اضافة"></Button>


</LinearLayout>