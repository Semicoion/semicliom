<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            tools:srcCompat="@tools:sample/avatars"></ImageView>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_upload"
            android:layout_alignParentStart="true" />

        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ماذا تريد ان تقدم"></TextView>

        <EditText
            android:id="@+id/nameOfBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="وصف الشيئ المقدم"></TextView>

        <EditText
            android:id="@+id/desOfBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="سعر الكتاب"></TextView>

        <EditText
            android:id="@+id/priceOfBook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>

        <CheckBox
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="بيع"></CheckBox>

        <CheckBox
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تبديل"></CheckBox>

        <CheckBox
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تاجير"></CheckBox>
        <Button
            android:id="@+id/button_choose_image"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="اضافة صورة"
            android:layout_gravity="center"/>

        <Button
        android:id="@+id/addBook"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="اضافه"></Button>






</LinearLayout>